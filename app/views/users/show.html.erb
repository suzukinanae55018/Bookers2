<h1>users show</h1>

<h2>User info</h2>
<%= image_tag @user.get_profile_image(100, 100) %>

<table>
  <tbody>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>

    <tr>
      <th>introduction</th>
      <tr><%= @user.introduction %></tr>
    </tr>
  </tbody>
</table>

<%= link_to edit_user_path(@user) do %>
  <i class="fa-solid fa-user-gear"></i>
<% end %>

<h2>New book</h2>
  <div>
    <%= form_with model: @book do |f| %>
    <div>
      <label>Title</label><br/>
      <%= f.text_field :title %>
    </div>

    <div>
        <label>Opinion</label><br/>
        <%= f.text_area :body %>
    </div>

    <span>
        <%= f.submit 'Create Book' %>
    </span>
  </div>
<% end %>

