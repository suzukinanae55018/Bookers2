<p id="notice"></p>
<div class='container px-5 px-sm-0'>
	<div class='row'>

    <%= render 'books/list', user: @user, book: @book %>

   <div class='col-md-8 offset-md-1'>
     <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag book.user.get_profile_image(100, 100) %>
              <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id)%></td>
              <td><%= book.body %></td>

              <td>
                <p>コメント数：<%= book.book_comments.count %></p>
            　</td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>前日の投稿数</th>
    　　   　  <th>今日の投稿数</th>
    　　   　  <th>前日比</th>
    　　 　  </tr>
    　　 　  <tr>
            <td><%= @yesterday_post_count %></td>
    　　　     <td><%= @today_post_count %></td>
    　　　     <td><%= @ratio %></td>
    　　 　  </tr>
    　　　</tbody>
　　　</table>

      <table class="table table-bordered">
    　  <tbody>
          <tr>
        　　  <th>今週の合計</th>
        　　　<th>先週の合計</th>
        　　  <th>前週比</th>
        　</tr>
        　<tr>
      　　　   <td><%= @weekly_post_count %></td>
      　　    <td><%= @last_weekly_post_count %></td>
            <td><%= @weekly_ratio %></td>
    　　    </tr>
    　　　</tbody>
    　</table>

    　<table class="table table-bordered">
      <h4>7日間分の投稿数</h4>
        <tbody>
          <tr>
            <% @dates.reverse.each do |date| %>
              <% formatted_date = (date == "0日前" ? "今日" : date) %>
              <td><%= formatted_date %></td>
            <% end %>
          </tr>
          <tr>
            <% @posts_counts.reverse.each do |count| %>
              <td><%= count %></td>
            <% end %>
          </tr>
        </tbody>
      </table>

      <canvas id="bookChart"></canvas>

      <script>
        const ctx = document.getElementById('bookChart');

        new Chart(ctx, {
          type: 'line',
          data: {
            labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
            datasets: [{
              label: '投稿した本の数',
              data: <%= @posts_counts.reverse %>,
              borderColor: 'blue',
            }]
          },
          options: {
            plugins: {
              title: {
                display: true,
                text: '７日間の本の投稿数'
              }
            },
            y: {
              min: 0,
              max: 10,
            },
          },
        });
      </script>
       <%= form_with url:user_search_path(@user), method: :get, local: false do |f| %>
        <%= f.date_field :created_at %>
        <%= f.submit '検索', class: "btn btn-primary" %>
      <% end %>

      <div id="search_result">
        <% if @search_book.present? %>
          <%= render 'search', search_book: @search_book %>
        <% end %>
      </div>
    </div>
  </div>
</div>