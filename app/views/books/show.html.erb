<p id="notice"></p>
<div class='container px-5 px-sm-0'>
	<div class='row'>

    <%= render 'list', user: @user, book: @book_new %>

   <div class='col-md-8 offset-md-1'>
     <h2>Book detail</h2>
      <table class="table">
        <tbody>
            <tr>
              <td>
                <%= link_to user_path(@user.id) do %>
                  <%= image_tag @book.user.get_profile_image(100, 100) %><br/>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>

              <td><% if @book.favorited_by?(current_user) %>
                  <p>
                    <%= link_to book_favorite_path(@book), method: :delete do %>
                       <span style="color: red;">♥<%= @book.favorites.count %></span>
                    <% end %>
                  </p>
                  <% else %>
                  <p>
                    <%= link_to book_favorite_path(@book), method: :post do %>
                      ♡<%= @book.favorites.count %>
                    <% end %>
                  </p>
                  <% end %>
              </td>

              <% if @book.user == current_user %>
               <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
              <% end %>

              <% if @book.user == current_user %>
               <td><%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger" %></td>
              <% end %>

               <td>
                  <p>コメント件数：<%= @book.book_comments.count %></p>
               </td>
            </tr>
        </tbody>
      </table>

      <table>
        <tbody>
            <tr>
                  <% @book.book_comments.each do |book_comment| %>
                    <td><%= image_tag book_comment.user.get_profile_image(100,100) %><br/>
                    <%= book_comment.user.name %>
                    </td>

                    <td><%= book_comment.comment %></td>

                       <% if book_comment.user == current_user %>
                        <td><%= link_to "Destroy", book_path(book_comment.book, book_comment), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger" %></td>
                        <!--上記のdestroyができない、destroyアクションを何と書いてよいかわからない-->
                       <% end %>
                  <% end %>
            </tr>
        </tbody>
      </table>

      <div class="form-group">
        <%= form_with model: [@book, @book_comment] do |f| %>
          <%= f.text_area :comment, rows: '5', class: "form-control",  placeholder: "コメントをここに" %><br/>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>