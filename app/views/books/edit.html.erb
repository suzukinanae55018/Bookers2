<p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h1>Editing Book</h1>
        <div>
        <% if @book.errors.any? %>
         <% if @book.errors.count > 1 %>
           <p class="h3"><%= @book.errors.count %>errors prohibited this book from being saved:</p>
         <% else %>
           <p class="h3"><%= @book.errors.count %>error prohibited this book from being saved:</p>
         <% end %>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        </div>

        <%= form_with model: @book do |f| %>
        <div>

          <div class="form-group">
            <label>Title</label><br>
            <%= f.text_field :title, class: "form-control" %>
          </div>

          <div class="form-group">
            <label>Opinion</label><br>
            <%= f.text_area :body, class: "form-control" %>
          </div>

          <span class="form-group">
          <%= f.submit 'Update Book', class: "btn btn-sm btn-success" %>
          </span>
        </div>

        <div class="mt-2">
        <%= link_to "Show", book_path(@book.id) %>
        |
        <%= link_to "Back", books_path %>
        </div>
        <% end %>
      </div>
    </div>
  </div>