<h2>
  <%if @range == "Book" %>
    <%= "Books search for " + params[:word] %>
  <% elsif @range == "User" %>
    <%= "Users search for " + params[:word] %>
  <% end %>
</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUser -->
    <% if @range == "User" %>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= image_tag user.get_profile_image(100, 100) %><br/>
                <%= user.name %></td>
            </tr>
          <% end %>

        </tbody>
    <% elsif @range == "Book" %>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
        <tbody>

            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= image_tag book.user.get_profile_image(100, 100) %><br/>
                  <%= book.user.name %></td>

                <td><%= book.title %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
       </tbody>
    <% end %>
</table>