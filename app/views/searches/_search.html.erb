<% if user_signed_in? %>
  <div class="search_form mt-3 d-flex justify-content-center">
    <%= form_with url: search_path, local: true, method: :get, class: 'form-inline' do |f| %>
      <%= f.text_field :word, class: 'form-control mr-2' %>
      <%= f.select :range, options_for_select([['User'], ['Book']]), {}, class: 'form-control mr-2' %>
      <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]), {}, class: 'form-control mr-2' %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>